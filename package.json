{
  "private": true,
  "name": "jsugen",
  "author": "Stephan Herzog <sthzgvie@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@sthzg/jsugen-cli": "file:packages/jsugen-cli",
    "@sthzg/jsugen-core": "file:packages/jsugen-core",
    "@sthzg/jsugen-generate-builder": "file:packages/jsugen-generate-builder",
    "@sthzg/jsugen-generate-enums": "file:packages/jsugen-generate-enums",
    "@sthzg/jsugen-generate-lodash-object-paths": "file:packages/jsugen-generate-lodash-object-paths",
    "@sthzg/jsugen-generate-selector-functions": "file:packages/jsugen-generate-selector-functions"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "jest-watch-typeahead": "^0.3.1",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.5",
    "lodash-es": "^4.17.11",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0"
  },
  "lint-staged": {
    "*.{js}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged && npm run test"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lerna": "lerna",
    "lerna:clean": "lerna clean --yes && rm -Rfv ./node_modules && npm i",
    "format": "prettier --write \"packages/**/*.js\"",
    "pretty-quick": "pretty-quick",
    "test": "jest",
    "test:watch": "jest --watch",
    "jsugen": "node packages/jsugen-cli/bin/esm.js",
    "release": "lerna publish --conventional-commits --github-release --yes",
    "update": "npx npm-check -y && lerna exec -- npx npm-check -y"
  }
}
